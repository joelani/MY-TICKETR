
<section class="p-8 max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold text-slate-800">Welcome, {{ user.name }} ðŸ‘‹</h1>
    <a href="logout.php" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">Logout</a>
  </div>

  <div class="grid grid-cols-3 gap-6 mb-10">
    <div class="bg-blue-100 p-6 rounded-xl shadow text-center">
      <p class="text-4xl font-bold text-blue-700">{{ stats.total }}</p>
      <p class="text-slate-600 mt-2">Total Tickets</p>
    </div>
    <div class="bg-green-100 p-6 rounded-xl shadow text-center">
      <p class="text-4xl font-bold text-green-700">{{ stats.open }}</p>
      <p class="text-slate-600 mt-2">Open</p>
    </div>
    <div class="bg-gray-200 p-6 rounded-xl shadow text-center">
      <p class="text-4xl font-bold text-gray-700">{{ stats.closed }}</p>
      <p class="text-slate-600 mt-2">Closed</p>
    </div>
  </div>

  <h2 class="text-xl font-semibold mb-4 text-slate-700">Recent Tickets</h2>
  <table class="w-full bg-white shadow rounded-lg overflow-hidden">
    <thead class="bg-slate-100">
      <tr>
        <th class="text-left py-3 px-4">ID</th>
        <th class="text-left py-3 px-4">Title</th>
        <th class="text-left py-3 px-4">Status</th>
        <th class="text-left py-3 px-4">Priority</th>
        <th class="text-left py-3 px-4">Created</th>
      </tr>
    </thead>
    <tbody>
      {% for ticket in tickets %}
      <tr class="border-t border-slate-200">
        <td class="py-3 px-4">{{ ticket.id }}</td>
        <td class="py-3 px-4">{{ ticket.title }}</td>
        <td class="py-3 px-4">
          <span class="px-3 py-1 text-xs rounded-full
            {% if ticket.status == 'Open' %}bg-green-200 text-green-800{% else %}bg-gray-200 text-gray-700{% endif %}">
            {{ ticket.status }}
          </span>
        </td>
        <td class="py-3 px-4">{{ ticket.priority }}</td>
        <td class="py-3 px-4">{{ ticket.created_at }}</td>
      </tr>
      {% else %}
      <tr><td colspan="5" class="py-6 text-center text-slate-500">No tickets yet.</td></tr>
      {% endfor %}
    </tbody>
  </table>
</section>
