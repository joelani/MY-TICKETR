{% extends "layout.twig" %}

{% block title %}Register - My TicketR{% endblock %}

{% block content %}
<section class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-blue-50 to-white px-4">
  <div class="w-full max-w-md bg-white shadow-lg rounded-2xl p-8 border border-slate-200">
    <h1 class="text-3xl font-bold text-center text-slate-800 mb-6">Create an Account 📝</h1>
    <p class="text-center text-slate-500 mb-8">Sign up to start creating and tracking tickets.</p>

    {% if error %}
  <div class="mb-4 p-3 text-sm text-red-700 bg-red-100 border border-red-300 rounded-lg">
    {{ error }}
  </div>
{% endif %}

{% if success %}
  <div class="mb-4 p-3 text-sm text-green-700 bg-green-100 border border-green-300 rounded-lg">
    {{ success }}
  </div>
{% endif %}

    <form class="space-y-5" action="auth.php" method="POST">
  <!-- Identify the action -->
  <input type="hidden" name="action" value="signup">

  <div>
    <label class="block text-slate-700 mb-1 text-sm font-medium">Full Name</label>
    <input 
      type="text" 
      name="name"
      placeholder="John Doe" 
      class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" 
      required 
    />
  </div>

  <div>
    <label class="block text-slate-700 mb-1 text-sm font-medium">Email</label>
    <input 
      type="email" 
      name="email"
      placeholder="you@example.com" 
      class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" 
      required 
    />
  </div>

  <div>
    <label class="block text-slate-700 mb-1 text-sm font-medium">Password</label>
    <input 
      type="password" 
      name="password"
      placeholder="••••••••" 
      class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" 
      required 
    />
  </div>

  <button 
    type="submit" 
    class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition font-medium"
  >
    Create Account
  </button>
</form>


    <p class="text-center text-sm text-slate-500 mt-6">
      Already have an account?
      <a href="?page=login" class="text-blue-600 hover:underline">Login</a>
    </p>
  </div>

  <img src="/images/wave.svg" alt="wave" class="w-full mt-10 opacity-90" />
</section>
{% endblock %}
